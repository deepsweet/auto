    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "pretty": true,
    "lib": ["esnext"],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "memfs": [
        "types/memfs"
      ]
